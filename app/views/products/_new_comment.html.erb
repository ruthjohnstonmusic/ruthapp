<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
  <div class="form-group">

  </div>
    <p>
      <%= f.label :body, "Comment" %><br>
      <%= f.text_area :body, class: 'form-control' %>
    </p>

    <p>
      <div class="rating"></div>
    </p>
    <p>

      <%= f.submit "Submit" %>
    </p>
  <% end %>
<% end %>
