<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-6 col-md-4" id="product_table">
        <div id="product_table_inner">
          <%= image_tag(product.image_url, class: "img-responsive") %>
          <a href="#"><h1><%= product.name %></h1></a>
          <p id="product_description"><%= product.description %></p>
          <strong id="product_price"><%= product.price %></strong>
          <p><%= link_to 'Show', product %></p>
          <p><%= link_to 'Edit', edit_product_path(product) %></p>
          <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        </div>
      </div><!-- /col -->
    <% end %>
  </div>
</div>
