<div class="container-fluid user-form">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">

      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Your email address", required: true %>
    </div>

    <div class="field">
      <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Your password", required: true %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
