<div class="container-fluid user-form">
  <h2>Resend confirmation instructions</h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Your email address", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Resend confirmation instructions" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
